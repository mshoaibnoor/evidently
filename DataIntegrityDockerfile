FROM python:3.10-slim

RUN apt-get update && apt-get install -y curl
RUN pip install pandas==2.0.1 deepchecks --upgrade

RUN mkdir /dataintegritycheck
COPY data-integrity-check.py /dataintegritycheck/data-integrity-check.py 
WORKDIR /dataintegritycheck
CMD ["python3", "data-integrity-check.py"]
